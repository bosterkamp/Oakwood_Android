<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:textColor="#FFFFFF"
    android:textSize="20sp"
    >

            <Button
            android:id="@+id/view_another_eray"
			android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"
    		android:text="View another eRay"
    		android:background="@null"
    		android:textColor="#FFFFFF"
    		android:gravity="left|center"
    		android:padding="5dp"
    		android:textSize="20sp"
            />

<TextView
	android:id="@+id/eray_title_text"
	android:layout_below="@id/view_another_eray"
	android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:text=""
    />            
          
    <ScrollView     
        android:id="@+id/SCROLLER_ID"
        android:layout_below="@id/eray_title_text"     
        android:layout_width="fill_parent"     
        android:layout_height="wrap_content"     
        android:scrollbars="vertical"     
        android:fillViewport="true">

<TextView
	android:id="@+id/eray_text"
	android:layout_below="@id/SCROLLER_ID"
	android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:text=""
    />
    
	</ScrollView>

	</RelativeLayout> 